{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node",
    ],
    // quita muchas advertencias para que sea lo menos molesto posible
    "esModuleInterop": true,
    // si no ponemos esto no funciona la injeccion de dependencias
    "emitDecoratorMetadata"
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
